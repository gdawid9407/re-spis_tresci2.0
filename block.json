{
  "apiVersion": 2,
  "name": "re-spis-tresci/toc",
  "title": "Spis treści",
  "category": "widgets",
  "icon": "list-view",
  "description": "Blok generujący spis treści na podstawie nagłówków wpisu",
  "supports": {
    "anchor": true,
    "html": false
  },
  "attributes": {
    "depth": {
      "type": "number",
      "default": 4
    },
    "min_headings": {
      "type": "number",
      "default": 2
    },
    "numbering": {
      "type": "boolean",
      "default": true
    },
    "collapse": {
      "type": "boolean",
      "default": false
    }
  },
  
  "editorScript": "file:./build/index.js",
  "editorStyle": "file:./build/index.css",
  "script": "file:./assets/js/toc.js",
  "style": "file:./assets/css/style.css"
}
